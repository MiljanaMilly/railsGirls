<p id="notice"><%= notice %></p>

<h1>Users</h1>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Lastname</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="col-3"><%= user.name %></td>
        <td class="col-3"><%= user.lastName %></td>
        <td class="col-3"><%= image_tag user.picture_url, width: '50%' if user.picture.present? %></td>
        <td class="col-1"><%= link_to 'Show', user %></td>
        <td class="col-1"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td class="col-1"><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class:"btn btn-outline-secondary" %>
